        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="resultBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="465" IsEnabled="False" TextChanged="resultBox_TextChanged"/>
        <Button x:Name="btn" Content="=" HorizontalAlignment="Left" Margin="199,140,0,0" VerticalAlignment="Top" Width="40" RenderTransformOrigin="4.104,1.789" Height="28">
