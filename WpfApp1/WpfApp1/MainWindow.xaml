                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="num_4" Content="4" HorizontalAlignment="Left" Margin="10,106,0,0" VerticalAlignment="Top" Width="56" IsCancel="True" Height="44" RenderTransformOrigin="2.424,2.599" Click="num_3_Click"/>
