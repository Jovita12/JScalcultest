        <Button x:Name="num_6" Content="6" HorizontalAlignment="Left" Margin="132,106,0,0" VerticalAlignment="Top" Width="56" IsCancel="True" Height="44" Click="num_3_Click"/>
        <Button x:Name="num_3" Content="3" HorizontalAlignment="Left" Margin="132,57,0,0" VerticalAlignment="Top" Width="56" IsCancel="True" Height="44" Click="num_3_Click"/>
        <Button x:Name="num_7" Content="7" HorizontalAlignment="Left" Margin="10,155,0,0" VerticalAlignment="Top" Width="56" IsCancel="True" Height="44" RenderTransformOrigin="2.424,2.599" Click="num_3_Click"/>
        <Button x:Name="num_9" Content="9" HorizontalAlignment="Left" Margin="132,155,0,0" VerticalAlignment="Top" Width="56" IsCancel="True" Height="44" Click="num_3_Click"/>
        <Button x:Name="num_8" Content="8" HorizontalAlignment="Left" Margin="71,155,0,0" VerticalAlignment="Top" Width="56" IsCancel="True" Height="44" Click="num_3_Click"/>

    </Grid>
</Window>
